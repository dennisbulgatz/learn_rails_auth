<h1>Sign Up</h1>
<%= form_for @user do |f| %>
 <%= render "shared/error_messages", :target => @user %>
  <div class="row">
    <%= f.label :email %>
    <%= f.text_field :email, :placeholder => 'user@domain.com' %>
  </div>
  <div class="row">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="row">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="row">
    <%= f.submit :class => 'button' %>
  </div>
<% end %>