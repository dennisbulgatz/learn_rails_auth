<div class="row">
	<div class="small-12 medium-6 large-4 small-centered columns">
		<h1>Login</h1>
		<%= form_tag sessions_path do %>
			<div class="row">
				<div class="large-12 columns">
					<%= label_tag :email %>
					<%= text_field_tag :email, params[:eamil] %>
				</div>
			</div>
			<div class="row">
				<div class="large-12 columns">
					<%= label_tag :password %>
					<%= password_field_tag :password %>
				</div>
			</div>
			<div class="row">
				<div class="large-12 columns">
					<%= button_tag 'Login', :class => 'button' %>
				</div>
			</div>
		<% end %>
	</div>
</div>