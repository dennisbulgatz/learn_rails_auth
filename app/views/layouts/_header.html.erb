<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="small-12 medium-8 columns">
        <% if current_user %>
          <p style="padding: .625rem 0; margin-bottom: 0">Logged in as <%= current_user.email %></p>
        <% else %>
          <p style="padding: .625rem 0; margin-bottom: 0">Please sign up or log in</p>
        <% end %>
      </div>
      <div class="small-12 medium-4 columns">
        <ul class="right button-group">
          <% if current_user %>
            <li><%= link_to "Log out", log_out_path, :class => 'tiny button' %></li>
            <li><%= link_to "Users", users_path, :class => 'tiny button' %></li>
            <li><%= link_to "Terms", terms_path, :class => 'tiny button' %></li>
          <% else %>
            <li><%= link_to "Sign up", sign_up_path, :class => 'tiny button' %></li>
            <li><%= link_to "Log in", log_in_path, :class => 'tiny button' %></li>


          <% end %>
        </ul>
      </div>
    </div>
    <hr>
  </div>
</div>