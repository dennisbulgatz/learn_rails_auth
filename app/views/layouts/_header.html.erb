<div class="row">
  <div class="large-8 columns">
    <% if current_user %>
      Logged in as <%= current_user.email %>
    <% end %>
  </div>
  <div class="large-4 columns">
    <ul class="right button-group">
      <% if current_user %>
        <li><%= link_to "Log out", log_out_path, :class => 'tiny button' %></li>
      <% else %>
        <li><%= link_to "Sign up", sign_up_path, :class => 'tiny button' %></li>
        <li><%= link_to "Log in", log_in_path, :class => 'tiny button' %></li>
      <% end %>
    </ul>
  </div>
</div>