<div class="row">
  <div class="large-8 columns">
    <% if current_user %>
      Logged in as <%= current_user.email %>
    <% end %>
  </div>
  <div class="large-4 columns">
    <% if current_user %>
      <%= link_to "Log out", log_out_path, :class => 'button' %>
    <% else %>
      <%= link_to "Sign up", sign_up_path, :class => 'button' %>
      <%= link_to "Log in", log_in_path, :class => 'button' %>
    <% end %>
  </div>
</div>